

<div class="three column row centered">
  <div id="NavColumn" class="column ui">
    <div id="NavSegment" class="ui segment">
      <center><h3 id="NavSegmentHeader"><%= "Hello, #{current_user.username}" %></h3></center>
      <center class="faveFilterOldestButton"><%= link_to "Filter: By Oldest", posts_path, class:"ui small button userMenuNewPostButton" %></center>
      <center class="faveFilterNewestButton"><%= link_to "Filter: By Newest", favorites_path, class:"ui small button userMenuNewPostButton" %></center>
      <center class="userMenuButtons"><%= link_to "Post A Find", new_post_path, class:"ui small button userMenuNewPostButton" %></center>
      <center class="userMenuButtons"><%= link_to "View All Finds", posts_path, class:"ui small button userMenuNewPostButton" %></center>
      <center class="userMenuButtons"><%= link_to "View All Finds On Map", map_path, class:"ui small button userMenuHomeButton" %></center>
    </div>
  </div>
</div>

<div class="ui grid userShowHeader">
  <div id="postIndexGrids" class="right floated left aligned ten wide column">
    <center>
      <h1 id="indexHeader"><%="Your Favorites" %></h1>
    </center>
  </div>
</div>

<div class="favorites">
  <% @favorites.reverse.each do |favorite| %>

  <div class="ui grid postIndexMainGrid">
    <div id="postIndexGrids" class="right floated left aligned ten wide column">
      <div id="indexPost">
        <center>
        <div id="indexProName">
          <h1><%= link_to "#{favorite.productname}", favorite, {:class => "css_class"} %></h1>
        </div>
        
        <div id="postIndexPic" class="two wide column">
          <%= image_tag favorite.image.url %>
        </div>

        <div id="indexProLoc">
          <h5><%= "Spotted In: #{favorite.city}, #{favorite.state}"%></h5>
        </div>

        <div id="indexProPrice">
          <h5><%= "Price: #{favorite.price}"%></h5>
        </div>

        <div id="indexProUser">
          <h5>
            <%= "Posted By:" %>
            <%=link_to "#{favorite.user.username}", favorite.user %>
          </h5>
        </div>
      </center>
      </div>
    </div>
  </div>

  <% end %>

</div>

<div class="ui grid pageFooter">
  <div id="postIndexGrids" class="right floated left aligned ten wide column">
  </div>
</div>
