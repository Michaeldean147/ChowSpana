<div class="three column row centered">
  <div id="NavColumn" class="column">
    <div id="NavSegment" class="ui segment">
      <center><h3 id="NavSegmentHeader"><%= "Hello, #{current_user.username}" %></h3></center>
      <center class="faveFilterOldestButton"><%= link_to "Filter: By Oldest", posts_path, class:"ui small button userMenuNewPostButton" %></center>
      <center class="faveFilterNewestButton"><%= link_to "Filter: By Newest", favorites_path, class:"ui small button userMenuNewPostButton" %></center>
      <center id="userMenuButtons"><%= link_to "Post A Find", new_post_path, class:"ui small button userMenuNewPostButton" %></center>
      <center id="userMenuButtons"><%= link_to "View All Finds", posts_path, class:"ui small button userMenuNewPostButton" %></center>
      <center id="userMenuButtons"><%= link_to "Go Home", root_path, class:"ui small button userMenuHomeButton" %></center>
      <div id="indexNavFilter" class="ui small icon input">
        <input type="text" placeholder="Filter Finds">
        <i class="search icon"></i>
      </div>
    </div>
  </div>
</div>


<div class="favorites">
  <% @favorites.reverse.each do |favorite| %>

  <div id="postIndexMainGrid" class="ui grid">
    <div id="postIndexGrids" class="right floated left aligned ten wide column">
      <div id="indexPost">
        <div id="postIndexPic" class="right floated center aligned two wide column">
          <%= image_tag favorite.image.url, :size => "260x180" %>
        </div>
        <div id="indexProName">
          <h1><%= link_to "#{favorite.productname}", favorite, {:class => "css_class"} %></h1>
        </div>

        <div id="indexProLoc">
          <h5><%= "Spotted In: #{favorite.city}, #{favorite.state}"%></h5>
        </div>

        <div id="indexProPrice">
          <h5><%= "Price: #{favorite.price}"%></h5>
        </div>

        <div id="indexProUser">
          <h5>
            <%= "Posted By:" %>
            <%=link_to "#{favorite.user.username}", favorite.user, {:style=>'color:#000000;', :class => "css_class"} %>
          </h5>
        </div>

      </div>
    </div>
  </div>

  <% end %>

</div>
