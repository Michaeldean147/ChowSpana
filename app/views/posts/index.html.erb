<h1>Posts</h1>

<% @posts.each do |post| %>

  <div id="indexPost">
    <div id="indexProName">
      <h4><%= link_to "#{post.productname}", post %></h4>
    </div>

    <div id="indexProDes">
      <%= post.description %>
    </div>

    <div id="indexProLoc">
      <%= post.location %>
    </div>

    <div id="indexProUser">

      <%= link_to "#{post.user.username}", post.user %>
    </div>
  </div>

<% end %>

<%= link_to "Back", root_path %>
