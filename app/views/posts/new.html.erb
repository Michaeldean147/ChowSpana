<center><h1>Post Your Find!</h1></center>

<div id="postIndexMainGrid" class="ui centered grid">
  <div class="eight wide column postFormGrid">
    <div class="postForm">
      <%= form_for @post do |f| %>

      <div class="ui input postFormInput">
        <%= f.label "Product Name" %>
        <%= f.text_field :productname %>
      </div>

      <div class="postFormDes">
        <%= f.label :decription %>
        <%= f.text_area :description %>
      </div>

      <div class="ui input postFormInput">
        <%= f.label :price %>
        <%= f.text_field :price, :placeholder => "Note Type ($,€,£,etc...)" %>
      </div>

      <div class="ui input postFormInput">
        <%= f.label :location %>
        <%= f.text_field :location %>
      </div>

      <div class="ui input postFormInput">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>

      <div class="ui input postFormInput">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class="ui input postFormInput">
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>

      <div class="postFormInput">
        <%= f.file_field :image %>
      </div>

      <div class="postFormButtons">
          <%= f.submit "Submit", class: "ui red button" %>
          <%= link_to "Back", posts_path, class:"ui button" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
