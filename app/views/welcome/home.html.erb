<div class="ui two column centered grid">
  <% if current_user %>
  <div class="three column row centered">
    <div class="column">
      <div class="browseWell ui segment">
        <center><h2><%= link_to "View All Finds!", posts_path %></h2></center>
      </div>
    </div>
    <div class="column">
      <div class="browseWell ui segment">
        <center><h2><%= link_to "View Your Favorites!", favorites_path %></h2></center>
      </div>
    </div>
    <div class="column">
      <div class="browseWell ui segment">
        <center><h2><%= link_to "Post A Find!", new_post_path %></h2></center>
      </div>
    </div>
  </div>

  <% else %>
    <div class="three column row centered">
        <div class="column">
          <a id="homeSignUpLink" href="/sign-up">
            <div id ="signupSegment" class="ui segment">
              <center id="innerSignupSegment">
                <div id="popaisleImg">

                </div>
               <h1>Sign Up</h1>
               <div id="storeImg">
               </div>
              </center>
            </div>
          </a>
        </div>

        <div class="column">
          <a id="homeSignInLink" href="/sign-in">
            <div id="signinSegment" class="ui segment">
              <center id="innerSigninSegment">
                <div id="candyaisleImg">
                </div>
                <h1 id="signinLink">Sign In</h1>
                <div id="poprackImg">
                </div>
              </center>
            </div>
          </a>
        </div>
    </div>
  <% end %>
</div>
