<div class="ui two column centered grid">

  <% if current_user %>
  <h1>current_user.username</h1>
  <div class="column">
    <div id="browseWell" class="ui segment">
      <center><h2><%= link_to "Browse All Finds!", posts_path, {:style=>'color:#000000;', :class => "css_class"}%></h2></center>
    </div>
  </div>

  <% else %>
    <div class="three column row centered">
        <div class="column">
          <a id="homeSignUpLink" href="/sign-up">
            <div id ="signupSegment" class="ui segment">
              <center id="innerSignupSegment">
                <div id="popaisleImg">

                </div>
               <h1>Sign Up</h1>
               <div id="storeImg">
               </div>
              </center>
            </div>
          </a>
        </div>

        <div class="column">
          <a id="homeSignInLink" href="/sign-in">
            <div id="signinSegment" class="ui segment">
              <center id="innerSigninSegment">
                <div id="candyaisleImg">
                </div>
                <h1 id="signinLink">Sign In</h1>
                <div id="poprackImg">
                </div>
              </center>
            </div>
          </a>
        </div>

    <% end %>
    </div>
</div>
